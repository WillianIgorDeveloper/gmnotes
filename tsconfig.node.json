{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Alias path */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@interfaces": ["src/interfaces"],
      "@errors": ["src/modules/errors"],
      "@factories": ["src/modules/factories"],
      "@services": ["src/modules/services"],
      "@usecases": ["src/modules/usecases"],
      "@components/*": ["src/presenters/components/*"],
      "@contexts/*": ["src/presenters/contexts/*"],
      "@layouts/*": ["src/presenters/layouts/*"],
      "@middlewares/*": ["src/presenters/middlewares/*"],
      "@pages/*": ["src/presenters/pages/*"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["vite.config.ts"]
}
